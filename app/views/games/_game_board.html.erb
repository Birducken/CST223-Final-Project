<div class="container-xl position-absolute top-50 start-50 translate-middle text-center">
  <div class="row m-2">
    <% for i in 0..4 %>
      <div class="col">
        <%= inline_svg_tag card_svg(@game.private_sales[i]) %>
        <button role="button" class="btn btn-secondary btn-lg text-primary m-1 w-75">Buy</button>
      </div>
    <% end %>
  </div>
  <div class="row m-2">
    <% for i in 0..4 %>
      <div class="col">
        <%= inline_svg_tag card_svg(@game.public_sales[i]) %>
        <button role="button" class="btn btn-secondary btn-lg text-primary m-1 w-75">Buy</button>
      </div>
    <% end %>
  </div>
  <div class="row m-2">
    <% for i in 0..4 %>
      <div class="col">
        <%= inline_svg_tag card_svg(@game.assets[i]) %>
        <button role="button" class="btn btn-secondary btn-lg text-primary m-1 w-75">Spend</button>
      </div>
    <% end %>
  </div>
</div>